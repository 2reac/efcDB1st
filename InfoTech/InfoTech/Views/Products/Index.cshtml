@model IEnumerable<InfoTech.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1>Index</h1>*@
<div class="title col row mx-0">
    <div class="col-6 pl-0">
        All products
    </div>
    <div class="col-6 pr-0" style="padding-left: 3.75rem;">
    @using (Html.BeginForm("Index", "Products", FormMethod.Get))
    {
        @Html.TextBox("searching");
        <input type="submit" value="Search" />
    }
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Price
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Origin)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.InStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>*@
            @if (User.IsInRole("User"))
            {
            <th></th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        var imgSrc = String.Format("data:image;base64,{0}", item.ProductImage);
                    }
                    <img src="@imgSrc" width="100" height=auto />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Origin)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.InStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand.BrandName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>*@
                @if (User.IsInRole("User"))
                {
                <td>
                    <a href="/Cart/AddProduct?Price=@item.ProductPrice&Id=@item.ProductId"><button class="btn btn-outline-info">Add to cart</button></a>
                </td>
                }
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                    <span>|</span>
                }
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a>
                @if (User.IsInRole("Admin"))
                {
                    <span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                }
            </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table td {
        vertical-align: baseline;
    }

    .title {
        font-size: 2rem;
        font-weight: 500;
        margin-top: 0;
        margin-bottom: 0.5rem;
    }
</style>